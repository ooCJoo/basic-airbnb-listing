<%- include('partials/head', { title: 'Add Review' }) %> 
<style>
  .rate {
    float: left;
    height: 46px;
    padding: 0 10px;
}
.rate:not(:checked) > input {
    position:absolute;
    top:-9999px;
}
.rate:not(:checked) > label {
    float:right;
    width:1em;
    overflow:hidden;
    white-space:nowrap;
    cursor:pointer;
    font-size:30px;
    color:#ccc;
}
.rate:not(:checked) > label:before {
    content: 'â˜… ';
}
.rate > input:checked ~ label {
    color: #ffc700;    
}
.rate:not(:checked) > label:hover,
.rate:not(:checked) > label:hover ~ label {
    color: #deb217;  
}
.rate > input:checked + label:hover,
.rate > input:checked + label:hover ~ label,
.rate > input:checked ~ label:hover,
.rate > input:checked ~ label:hover ~ label,
.rate > label:hover ~ input:checked ~ label {
    color: #c59b08;
}
form {
  display: inline-block;
}
.rating {
  margin-top: 40px;
  margin-bottom: 40px;
  transform: translateY(40px);
}
.space {
  float: right;
  height: 10px;
  width: 100%;
}
.review-container {
  position: absolute;
  margin-top: 40px;
}
.main-container {
  padding: 0 10px;
}

.review-container,
.rating,
.btn-reg,
h1 {
  margin-left: 10px;
}
a {
    all: unset;
    cursor: pointer;
}
</style>
</head>
<body>
<h1>Add Review by Username: <%= user.username %> </h1>

<form  action="/addreview/<%= id %>" method="post">

<div class="rate-container">
  
  <p style="font-size: 25px;">Rate it</p>
  <div class="rate">
    <input type="radio" id="star5" name="rate" value="5" />
    <label for="star5" title="text">5 stars</label>
    <input type="radio" id="star4" name="rate" value="4" />
    <label for="star4" title="text">4 stars</label>
    <input type="radio" id="star3" name="rate" value="3" />
    <label for="star3" title="text">3 stars</label>
    <input type="radio" id="star2" name="rate" value="2" />
    <label for="star2" title="text">2 stars</label>
    <input type="radio" id="star1" name="rate" value="1" />
    <label for="star1" title="text">1 star</label>
  </div>
</div>



<div class="review-container">
  <p style="font-size: 25px;">Comment</p>
</div>


  <div class="rating">
    <textarea name="review" id="" cols="30" rows="10" id="review" style="font-size: 25px;"></textarea>
  </div>

    <input type="username" name="username" id="username" hidden value="<%= user.username %>">
    <input type="listing_id" name="listing_id" id="listing_id" value="<%= id %>" hidden>

  <br>
  <div class="btn-reg">
      <button style="font-size: 20px;">Submit</button>
  </div>

</form>
<a href="/list/<%= id %>" style="font-size: 20px; cursor: pointer;">Cancel</a>

<%- include('partials/foot') %> 